{
  "manifest_version": 3,
  "name": "Bing Rewards Auto Search",
  "version": "1.2",
  "description": "Automatically perform multiple Bing searches with daily recurring schedule",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://www.bing.com/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Bing Auto Search"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png"
  }
}